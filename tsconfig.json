{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "target": "es6",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
